<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/chatRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/deep_space_black"> <com.example.RealmsAI.StarfieldView
        android:id="@+id/starfieldBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/backgroundImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:alpha="1.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:id="@+id/profileScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNavBar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">
            <ImageView
                android:id="@+id/profileIcon"
                android:layout_width="96dp" android:layout_height="96dp"
                android:src="@drawable/placeholder_avatar"
                android:layout_gravity="center_horizontal"
                android:contentDescription="Profile Icon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/profileHandle"
                android:padding="8dp"/>

            <TextView
                android:id="@+id/profileMessageStats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daily Messages: --"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="@id/profileIcon"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_gravity="center_horizontal" />

            <Button
                android:id="@+id/upgradeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/profileMessageStats"
                app:layout_constraintStart_toStartOf="@id/profileMessageStats"
                app:layout_constraintEnd_toEndOf="@id/profileMessageStats"
                android:text="Upgrade"/>

            <!-- Read-only handle -->
            <TextView
                android:id="@+id/profileHandle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\@handle"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:layout_gravity="center_horizontal"
                android:paddingTop="12dp"
                android:paddingBottom="8dp"
                android:textStyle="bold"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/profileIcon"
                app:layout_constraintStart_toStartOf="@id/profileIcon"
                app:layout_constraintEnd_toEndOf="@id/profileIcon"
                app:layout_constraintBottom_toTopOf="@id/profileName"/>

            <!-- Editable handle (only visible if not set) -->
            <LinearLayout
                android:id="@+id/handleEditContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/profileIcon"
                app:layout_constraintStart_toStartOf="@id/profileIcon"
                app:layout_constraintEnd_toEndOf="@id/profileIcon"
                app:layout_constraintBottom_toTopOf="@id/profileName">
                <EditText
                    android:id="@+id/handleEdit"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="Choose your handle"
                    android:maxLength="16"
                    android:textSize="16sp"/>
                <Button
                    android:id="@+id/saveHandleButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Set Creator ID"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/freeoutline"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@id/profileName"
                app:layout_constraintBottom_toBottomOf="@id/profileBio"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/outline"
                android:scaleType="fitXY"/>
            <EditText
                android:id="@+id/profileName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Display Name"
                android:layout_marginHorizontal="10dp"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@id/profileHandle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/profileBio"/>



            <EditText
                android:id="@+id/profileBio"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:hint="Short bio..." android:minLines="2"
                android:maxLines="4" android:textSize="16sp"
                android:paddingTop="8dp"
                android:layout_marginHorizontal="10dp"
                app:layout_constraintTop_toBottomOf="@id/profileName"
                app:layout_constraintBottom_toTopOf="@id/profilebuttons"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/profilebuttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/profileBio"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <Button
                    android:id="@+id/logoutButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="Log Out"
                    android:layout_marginTop="8dp"/>

                <Button
                    android:id="@+id/saveProfileButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/logoutButton"
                    android:text="Save"
                    android:layout_marginTop="18dp"/>

                <Button
                    android:id="@+id/viewProfileButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/saveProfileButton"
                    android:text="view profile"
                    android:layout_marginTop="18dp"/>

                <Button
                    android:id="@+id/messageButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/viewProfileButton"
                    android:text="Messages"
                    android:layout_marginTop="18dp"/>

                <View
                android:id="@+id/messagesBadge"
                android:layout_width="32dp"
                android:layout_height="24dp"
                android:background="@drawable/new_message"
                app:layout_constraintTop_toTopOf="@id/messageButton"
                app:layout_constraintEnd_toEndOf="@id/messageButton"
                android:translationZ="10dp"
                android:visibility="gone"/>

                <Button
                    android:id="@+id/deleteAccountButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/messageButton"
                    android:text="Delete Account"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#AA0000"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="32dp"/>

                <Button
                    android:id="@+id/verifyEmailButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Verify Email for Badge"
                    android:textSize="12sp"
                    android:backgroundTint="#FF9800"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/deleteAccountButton"
                    android:layout_marginTop="18dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>



        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <include
        android:id="@+id/bottomNavBar"
        layout="@layout/bottom_nav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
