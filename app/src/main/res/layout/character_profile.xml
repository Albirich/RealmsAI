<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Character Avatar -->
    <ImageView
        android:id="@+id/characterProfileAvatar"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/placeholder_avatar"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginStart="24dp"
        android:contentDescription="Character Avatar" />

    <!-- SFW Badge -->
    <ImageView
        android:id="@+id/characterProfileSfwBadge"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:src="@drawable/sfw_badge"
        app:layout_constraintTop_toTopOf="@id/characterProfileSessionButton"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="24dp"
        android:contentDescription="SFW badge"/>


    <!-- Go to Session Button -->
    <Button
        android:id="@+id/characterProfileSessionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:text="start session"
        android:textSize="10dp"
        android:maxLines="1"
        app:layout_constraintTop_toBottomOf="@id/characterProfileAuthor"
        app:layout_constraintStart_toStartOf="@id/characterProfileAuthor"
        android:layout_marginEnd="24dp"
        android:minWidth="100dp"
        android:backgroundTint="#3974D3"
        android:textColor="#FFF"/>

    <!-- Character Name -->
    <TextView
        android:id="@+id/characterProfileName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Character Name"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="@id/characterProfileAvatar"
        app:layout_constraintStart_toEndOf="@id/characterProfileAvatar"
        app:layout_constraintEnd_toStartOf="@id/characterProfileSfwBadge"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="12dp"/>

    <!-- Author (clickable link) -->
    <TextView
        android:id="@+id/characterProfileAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="by @author"
        android:textSize="14sp"
        android:textColor="#3974D3"
        android:textStyle="italic"
        app:layout_constraintTop_toBottomOf="@id/characterProfileName"
        app:layout_constraintStart_toStartOf="@id/characterProfileName"
        android:layout_marginTop="4dp"/>

    <!-- Personality -->
    <TextView
        android:id="@+id/characterProfilePersonality"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Personality: ..."
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/characterProfileAvatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"/>

    <!-- Physical Info -->
    <TextView
        android:id="@+id/characterProfilePhysical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Age: 18   Height: 5'7\   Weight: 120lbs"
        android:textSize="15sp"
        android:textColor="#444"
        app:layout_constraintTop_toBottomOf="@id/characterProfilePersonality"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"/>

    <!-- Physical Description -->
    <TextView
        android:id="@+id/characterProfilePhysicalDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Physical description..."
        android:textSize="15sp"
        android:textColor="#444"
        app:layout_constraintTop_toBottomOf="@id/characterProfilePhysical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"/>

    <!-- Outfits Title -->
    <TextView
        android:id="@+id/characterProfileOutfitsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Outfits"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/characterProfilePhysicalDesc"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"/>

    <!-- Outfits RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/characterProfileOutfitsRecycler"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/characterProfileOutfitsTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:scrollbars="horizontal"/>

    <!-- Add bottom navigation bar if you want -->
    <!-- <include
        layout="@layout/bottom_nav"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/> -->

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>