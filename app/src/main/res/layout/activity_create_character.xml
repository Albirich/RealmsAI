<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical">

        <!-- Name Input -->
        <EditText
            android:id="@+id/characterNameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter character name"
            android:textSize="18sp" />

        <!-- Summary -->
        <EditText
            android:id="@+id/etSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Short summary (1â€“2 lines)"
            android:maxLines="2"
            android:inputType="textCapSentences|textMultiLine"/>

        <!-- Personality Input-->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:counterEnabled="true"
            app:counterMaxLength="1000">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/characterPersonalityInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="200dp"
                android:hint="Enter personality"
                android:inputType="textMultiLine"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Greeting Input-->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:counterEnabled="true"
            app:counterMaxLength="200"
            app:helperText="Tell the AI what its first message should be. Talk to it like you're speaking to the characters as a director.">
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/characterGreetingInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="200dp"
                android:hint="Enter Greeting (First Message)"
                android:inputType="textMultiLine"/>
        </com.google.android.material.textfield.TextInputLayout>

        <EditText
            android:id="@+id/characterprivateDescriptionInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter private information (for creator)"
            app:counterMaxLength="300"/>

        <!-- Tags Input -->
        <EditText
            android:id="@+id/characterTagsInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter tags"
            android:padding="16dp"
            android:textSize="16sp" />


        <!-- Images -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Avatar"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/avatarImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:src="@drawable/placeholder_avatar"
            android:contentDescription="@string/avatar"
            android:scaleType="centerCrop"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/wardrobeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Wardrobe" />

        <Button
            android:id="@+id/relationshipBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Relationships"/>

        <!-- Background Selector -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Background"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/backgroundButton"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/placeholder_background"
            android:scaleType="fitXY"
            android:contentDescription="Upload background"/>

        <!-- NEW: Preset backgrounds gallery -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/backgroundRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:overScrollMode="never"
            android:scrollbars="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>


        <!-- 2) Profile Info (collapsible) -->
        <LinearLayout
            android:id="@+id/physicalInfoHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="16dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:id="@+id/physicalInfoLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Physcial Info"
                android:textAppearance="?attr/textAppearanceSubtitle1"/>

            <ImageView
                android:id="@+id/physicalInfoToggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_expand_more" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/physicalInfoSection"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:paddingStart="16dp">

            <EditText
                android:id="@+id/ageEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Age"/>

            <EditText
                android:id="@+id/heightEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Height"/>

            <EditText
                android:id="@+id/weightEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Weight"/>

            <EditText
                android:id="@+id/eyeColorEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Eye Color"/>

            <EditText
                android:id="@+id/hairColorEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Hair Color"/>
        </LinearLayout>

        <!-- Save Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/charSubmitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:layout_centerInParent="true"/>
    </LinearLayout>
</ScrollView>