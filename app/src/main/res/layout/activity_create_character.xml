<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Name Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/characterNameInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter personality"
                android:inputType="textMultiLine"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Summary -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etSummary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Short summary (1â€“2 lines)"
                android:maxLines="2"
                android:inputType="textCapSentences|textMultiLine"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Personality Input-->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            app:counterEnabled="true"
            app:counterMaxLength="2000">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/characterPersonalityInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="200dp"
                android:hint="Enter personality"
                android:inputType="textMultiLine"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Greeting Input-->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            app:counterEnabled="true"
            app:counterMaxLength="200"
            app:helperText="Tell the AI what its first message should be. Talk to it like you're speaking to the characters as a director.">
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/characterGreetingInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="200dp"
                android:hint="Enter Greeting (First Message)"
                android:inputType="textMultiLine"/>
        </com.google.android.material.textfield.TextInputLayout>
        <!-- Backstory Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            app:counterEnabled="true"
            app:counterMaxLength="2000"
            app:helperText="Write the character's history, lore, and past in detail.">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/backstoryEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:counterEnabled="true"
                app:counterMaxLength="2000"
                android:maxLines="5"
                android:hint="Character Backstory"
                android:inputType="textMultiLine" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- private Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            app:counterEnabled="true"
            app:counterMaxLength="400"
            app:helperText="Write the character's history, lore, and past in detail.">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/characterprivateDescriptionInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter private information (for creator)"
                app:counterMaxLength="400"/>
        </com.google.android.material.textfield.TextInputLayout>
        <!-- Tags Input -->
        <EditText
            android:id="@+id/characterTagsInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter tags"
            android:padding="16dp"
            android:textSize="16sp" />


        <!-- Images -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Avatar"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/avatarImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:src="@drawable/placeholder_avatar"
            android:contentDescription="@string/avatar"
            android:scaleType="centerCrop"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/wardrobeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Wardrobe" />

        <Button
            android:id="@+id/charrelationshipBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Relationships"/>

        <!-- Background Selector -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/addAreaButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Background Gallery" />


        <!-- 2) Profile Info (collapsible) -->
        <LinearLayout
            android:id="@+id/physicalInfoHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="16dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:id="@+id/physicalInfoLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Physcial Info"
                android:textAppearance="?attr/textAppearanceSubtitle1"/>

            <ImageView
                android:id="@+id/physicalInfoToggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_expand_more" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/physicalInfoSection"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:paddingStart="16dp">

            <EditText
                android:id="@+id/ageEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Age"/>
            <EditText
                android:id="@+id/genderEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Pronouns"/>
            <EditText
                android:id="@+id/heightEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Height"/>

            <EditText
                android:id="@+id/weightEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Weight"/>

            <EditText
                android:id="@+id/eyeColorEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Eye Color"/>

            <EditText
                android:id="@+id/hairColorEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Hair Color"/>
            <EditText
                android:id="@+id/physicalDescriptionEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Physical Description"/>
        </LinearLayout>

        <!-- Bubble Color Picker -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bubble Color"
            android:paddingTop="8dp"/>
        <Spinner
            android:id="@+id/bubbleColorSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Text Color Picker -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Text Color"
            android:paddingTop="8dp"/>
        <Spinner
            android:id="@+id/textColorSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Switch
            android:id="@+id/sfwSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Safe For Work (SFW only)"
            android:checked="true"
            android:paddingTop="16dp"
            android:layout_gravity="start"/>

        <!-- Save Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/charSubmitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:layout_centerInParent="true"/>
    </LinearLayout>
</ScrollView>