<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:padding="16dp">>

        <TextView
            android:id="@+id/genreSpinnerLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Genre:"
            android:textSize="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/rpgsettingspacer1"/>
        <Spinner
            android:id="@+id/genreSpinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/genreSpinnerLabel"
            app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="a list of genre to dictate what the options are given"/>
        <View
            android:id="@+id/rpgsettingspacer1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            app:layout_constraintTop_toBottomOf="@id/genreSpinnerLabel"
            android:background="#000000"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="8dp" />

            <!-- Characters header -->
        <TextView
            android:id="@+id/characterListLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Characters"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/rpgsettingspacer1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/characterRecyclerView"
            android:layout_marginTop="16dp"/>

            <!-- RecyclerView for characters -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/characterRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/characterListLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"/>
        <View
            android:id="@+id/rpgsettingspacer2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            app:layout_constraintTop_toBottomOf="@id/characterRecyclerView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/actsLabel"
            android:background="#000000"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />
        <!-- Acts header and add button would go below -->
        <TextView
            android:id="@+id/actsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Acts"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/rpgsettingspacer2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/actsRecyclerView"
            android:layout_marginTop="16dp"/>
        <ImageButton
            android:id="@+id/addActButton"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_add"
            android:scaleType="fitXY"
            android:layout_marginStart="10dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:layout_constraintStart_toEndOf="@id/actsLabel"
            app:layout_constraintBottom_toBottomOf="@id/actsLabel"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/actsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toBottomOf="@id/actsLabel"
            app:layout_constraintBottom_toTopOf="@id/saveRpgSettingsButton"/>
        <Button
            android:id="@+id/saveRpgSettingsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/actsRecyclerView"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="done"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>