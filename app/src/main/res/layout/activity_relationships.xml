<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relationshipRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:padding="12dp">

    <TextView
        android:id="@+id/relationshipsHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Session Relationships"
        android:textStyle="bold"
        android:textSize="20sp"
        android:gravity="center_horizontal"
        android:paddingBottom="12dp" />

    <!-- RecyclerView for listing participants and their relationships -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/relationshipRecycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:overScrollMode="ifContentScrolls"
        android:clipToPadding="false"
        android:paddingBottom="8dp"/>

    <!-- Save/Done button at the bottom -->
    <Button
        android:id="@+id/btnDoneRelationships"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Done"
        android:layout_marginTop="12dp"/>
</LinearLayout>
