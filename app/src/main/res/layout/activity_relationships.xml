<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chatRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/deep_space_black"> <com.example.RealmsAI.StarfieldView
    android:id="@+id/starfieldBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/backgroundImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:alpha="1.0" />
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relationshipRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="12dp">

    <TextView
        android:id="@+id/relationshipsHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Session Relationships"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="20sp"
        android:gravity="center_horizontal"
        android:paddingBottom="12dp" />
    <include
        android:id="@+id/infoButtonChatRelationship"
        layout="@layout/info_button"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/relationshipsHeader"
        app:layout_constraintBottom_toBottomOf="@id/relationshipsHeader"
        app:layout_constraintStart_toEndOf="@id/relationshipsHeader"
        android:layout_gravity="center_vertical" />
    <ImageView
        android:id="@+id/freeoutline"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/relationshipRecycler"
        app:layout_constraintBottom_toBottomOf="@id/relationshipRecycler"
        app:layout_constraintStart_toStartOf="@id/relationshipRecycler"
        app:layout_constraintEnd_toEndOf="@id/relationshipRecycler"
        android:src="@drawable/outline"
        android:scaleType="fitXY"/>
    <!-- RecyclerView for listing participants and their relationships -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/relationshipRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:layout_constraintTop_toBottomOf="@id/relationshipsHeader"
        app:layout_constraintBottom_toTopOf="@id/sessionrelationshipspacer"
        android:overScrollMode="ifContentScrolls"
        android:clipToPadding="false"
        android:paddingBottom="8dp"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/sessionrelationshipspacer"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@id/relationshipRecycler"/>

    <!-- Save/Done button at the bottom -->
    <Button
        android:id="@+id/btnDoneRelationships"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Done"
        android:layout_marginTop="12dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>