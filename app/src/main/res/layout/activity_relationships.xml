<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relationshipRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="12dp">

    <TextView
        android:id="@+id/relationshipsHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Session Relationships"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="20sp"
        android:gravity="center_horizontal"
        android:paddingBottom="12dp" />
    <include
        android:id="@+id/infoButtonChatRelationship"
        layout="@layout/info_button"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/relationshipsHeader"
        app:layout_constraintBottom_toBottomOf="@id/relationshipsHeader"
        app:layout_constraintStart_toEndOf="@id/relationshipsHeader"
        android:layout_gravity="center_vertical" />

    <!-- RecyclerView for listing participants and their relationships -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/relationshipRecycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:layout_constraintTop_toBottomOf="@id/relationshipsHeader"
        app:layout_constraintBottom_toTopOf="@id/btnDoneRelationships"
        android:overScrollMode="ifContentScrolls"
        android:clipToPadding="false"
        android:paddingBottom="8dp"
        android:layout_marginTop="10dp"/>

    <!-- Save/Done button at the bottom -->
    <Button
        android:id="@+id/btnDoneRelationships"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Done"
        android:layout_marginTop="12dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
