<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="18dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="With:"
        android:paddingTop="2dp" />
    <EditText
        android:id="@+id/relationshipToNameEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="With (Name)"
        android:textSize="16sp"
        android:inputType="textPersonName" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Relationship type:"
        android:paddingTop="12dp" />
    <Spinner
        android:id="@+id/relationshipTypeSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/relationshipSummaryEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="(optional) Description, e.g. 'Childhood rival'" />
</LinearLayout>
