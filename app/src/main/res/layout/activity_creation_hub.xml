<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="15dp">


    <!-- “New Chat” Button -->
    <ImageButton
        android:id="@+id/btn_new_chat"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="12:5"
        android:background="@drawable/btn_new_chat"
        android:contentDescription="New Chat"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_vertical"/>

    <!-- “New Character” Button -->
    <ImageButton
        android:id="@+id/btn_new_char"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="12:5"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_new_char"
        android:contentDescription="New Character"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_new_chat"
        android:gravity="center_vertical"/>

    <!-- “New Persona” Button -->
    <ImageButton
        android:id="@+id/btn_new_sona"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="12:5"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_new_sona"
        android:contentDescription="New Persona"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_new_char"
        android:gravity="center_vertical"/>

    <!-- Bottom Navigation -->
    <include
        android:id="@+id/include_bottom_nav"
        layout="@layout/bottom_nav"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
