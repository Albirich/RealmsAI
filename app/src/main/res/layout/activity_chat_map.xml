<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:padding="16dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/chatRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/deep_space_black"> <com.example.RealmsAI.StarfieldView
        android:id="@+id/starfieldBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/backgroundImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:alpha="1.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Character Roster -->
    <TextView
        android:id="@+id/charactertitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Characters"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/characterRecycler"
        app:layout_constraintBottom_toBottomOf="@id/characterRecycler"
        app:layout_constraintStart_toStartOf="@id/characterRecycler"
        app:layout_constraintEnd_toEndOf="@id/characterRecycler"
        android:src="@drawable/outline"
        android:scaleType="fitXY"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/characterRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:minHeight="120dp"
        android:maxHeight="160dp"
        android:orientation="horizontal"
        android:scrollbars="horizontal"
        app:layout_constraintTop_toBottomOf="@id/charactertitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/arealabel"/>

    <!-- Areas Label -->
    <TextView
        android:id="@+id/arealabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Areas"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_marginBottom="4dp"
        app:layout_constraintTop_toBottomOf="@id/characterRecycler"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/areaRecycler"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/areaRecycler"
        app:layout_constraintBottom_toBottomOf="@id/areaRecycler"
        app:layout_constraintStart_toStartOf="@id/areaRecycler"
        app:layout_constraintEnd_toEndOf="@id/areaRecycler"
        android:src="@drawable/outline"
        android:scaleType="fitXY"/>
    <!-- Area List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/areaRecycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/arealabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/chat_map_btns"
        />

    <!-- Action Buttons -->
    <LinearLayout
        android:id="@+id/chat_map_btns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/addAreaButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Add Area" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/doneButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Done" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
