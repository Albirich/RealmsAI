<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/chatRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/deep_space_black"> <com.example.RealmsAI.StarfieldView
    android:id="@+id/starfieldBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/vnsettingsoutline"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/vnSettingsRoot"
        app:layout_constraintBottom_toBottomOf="@id/vnSettingsRoot"
        app:layout_constraintStart_toStartOf="@id/vnSettingsRoot"
        app:layout_constraintEnd_toEndOf="@id/vnSettingsRoot"
        android:src="@drawable/outline"
        android:scaleType="fitXY"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/vnSettingsRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="20dp">

    <!-- Monogamy toggle -->
    <CheckBox
        android:id="@+id/monogamyCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monogamy Cap"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <include
        android:id="@+id/infoButtonMonogamy"
        layout="@layout/info_button"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/monogamyCheck"
        app:layout_constraintBottom_toBottomOf="@id/monogamyCheck"
        app:layout_constraintStart_toEndOf="@id/monogamyCheck"
        android:layout_gravity="center_vertical" />

    <!-- Monogamy level (only visible if checked) -->
    <EditText
        android:id="@+id/monogamyLevel"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:hint="Level Lock"
        android:inputType="number"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/monogamyCheck"
        app:layout_constraintStart_toStartOf="@id/monogamyCheck"/>

    <!-- Jealousy toggle -->
    <CheckBox
        android:id="@+id/jealousyCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jealousy Mode"
        app:layout_constraintTop_toBottomOf="@id/monogamyLevel"
        app:layout_constraintStart_toStartOf="parent"/>
    <include
        android:id="@+id/infoButtonJealousy"
        layout="@layout/info_button"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/jealousyCheck"
        app:layout_constraintBottom_toBottomOf="@id/jealousyCheck"
        app:layout_constraintStart_toEndOf="@id/jealousyCheck"
        android:layout_gravity="center_vertical" />

    <!-- Main character toggle -->
    <CheckBox
        android:id="@+id/mainCharModeCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Main Character Mode"
        app:layout_constraintTop_toBottomOf="@id/jealousyCheck"
        app:layout_constraintStart_toStartOf="parent"/>
    <include
        android:id="@+id/infoButtonMainCharacter"
        layout="@layout/info_button"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/mainCharModeCheck"
        app:layout_constraintBottom_toBottomOf="@id/mainCharModeCheck"
        app:layout_constraintStart_toEndOf="@id/mainCharModeCheck"
        android:layout_gravity="center_vertical" />

    <!-- Main character select dropdown -->
    <Spinner
        android:id="@+id/mainCharSpinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/mainCharModeCheck"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/relationshipList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintVertical_bias="0.0"
        android:minHeight="100dp"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/vnsettingsoutline"
        app:layout_constraintBottom_toTopOf="@id/vnsettingsspacer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <include
        android:id="@+id/infoButtonvnsettings"
        layout="@layout/info_button"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/relationshipList"
        app:layout_constraintEnd_toEndOf="@id/relationshipList"
        android:layout_gravity="center_vertical" />

    <ImageView
        android:id="@+id/vnsettingsspacer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <!-- Save button -->
    <Button
        android:id="@+id/saveButton"
        android:text="Save"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>