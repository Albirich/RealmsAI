<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/clueRow"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:id="@+id/clueTitle"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/clueDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/btnEditClue"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_add"
        android:background="?android:selectableItemBackgroundBorderless"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toBottomOf="@id/clueRow"
        app:layout_constraintEnd_toStartOf="@id/btnDeleteClue"/>

    <ImageButton
        android:id="@+id/btnDeleteClue"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_delete"
        android:background="?android:selectableItemBackgroundBorderless"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toBottomOf="@id/clueRow"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/clueSpacer"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@id/btnEditClue"
        android:background="#000000"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />
</androidx.constraintlayout.widget.ConstraintLayout>