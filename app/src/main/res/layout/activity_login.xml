<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/chatRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/deep_space_black"> <com.example.RealmsAI.StarfieldView
        android:id="@+id/starfieldBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/backgroundImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:alpha="1.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:gravity="center"
    android:padding="32dp"
    android:layout_width="0dp"
    android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


    <LinearLayout
        android:orientation="vertical"
        android:background="#1C1F24"
        android:padding="24dp"
        android:elevation="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:clipToOutline="true">

        <EditText
            android:id="@+id/emailInput"
            android:hint="Email"
            android:textColorHint="#AAAAAA"
            android:textColor="#FFFFFF"
            android:inputType="textEmailAddress"
            android:backgroundTint="#00AEEF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/passwordInput"
            android:hint="Password"
            android:textColorHint="#AAAAAA"
            android:textColor="#FFFFFF"
            android:inputType="textPassword"
            android:backgroundTint="#00AEEF"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <Button
        android:id="@+id/loginButton"
        android:text="Log In"
        android:textColor="#FFFFFF"
        android:backgroundTint="#00AEEF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/signupButton"
        android:text="Sign Up"
        android:textColor="#00AEEF"
        android:backgroundTint="#1C1F24"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>