<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="6dp"
    android:gravity="center_vertical">

    <EditText
        android:id="@+id/levelNumberEdit"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:hint="Lvl"
        android:inputType="number" />

    <EditText
        android:id="@+id/thresholdEdit"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:hint="Threshold"
        android:inputType="number" />

    <EditText
        android:id="@+id/personalityEdit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="Personality for this level"
        android:maxLength="100"
        android:inputType="text"/>

    <ImageButton
        android:id="@+id/btnDeleteLevel"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@android:drawable/ic_delete"
        android:contentDescription="Delete Level"
        android:background="?android:attr/selectableItemBackgroundBorderless"/>
</LinearLayout>
