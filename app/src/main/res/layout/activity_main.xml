<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chatRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">


    <!-- Title -->
    <TextView
        android:id="@+id/chatTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_default"
        android:textSize="41sp"
        android:textColor="@color/teal_200"
        android:layout_marginTop="25dp"
        />

    <!-- Collapsible description container -->
    <LinearLayout
        android:id="@+id/descriptionContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp">

        <!-- Header row: “Description” label + toggle icon -->
        <LinearLayout
            android:id="@+id/descriptionHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:clickable="true"
            android:focusable="true"
            android:padding="18dp">

            <TextView
                android:id="@+id/chatDescriptionLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/description"
                android:textAppearance="?attr/textAppearanceSubtitle2"/>

            <ImageView
                android:id="@+id/descriptionToggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_expand_more"/>
        </LinearLayout>

        <!-- Actual description text, hidden by default -->
        <TextView
            android:id="@+id/chatDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textAppearance="?attr/textAppearanceBody2"/>
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Bot1 Avatar -->
        <ImageView
            android:id="@+id/botAvatar1ImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxHeight="600dp"
            android:src="@drawable/default_01"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:translationX="0dp"
            android:scaleType="fitCenter"
            android:scaleX="-1"
            android:adjustViewBounds="true" />
        <!-- Bot2 Avatar, overlapping Bot12-->
        <ImageView
            android:id="@+id/botAvatar2ImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxHeight="600dp"
            android:src="@drawable/default_01"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:translationX="-1dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <!-- User Message Display -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:layout_marginTop="-150dp"
        android:background="#DA222222">
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:layout_marginTop="-250dp">
        <View
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="top"
            android:background="@drawable/fade_top" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/chatRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="200dp"
            android:text="@string/user_message_default"
            android:textColor="#daaaaaaa"
            android:textSize="20sp"
            />
    </FrameLayout>

    <!-- Container for User Input -->
    <LinearLayout
        android:id="@+id/inputContainer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="0dp"
        android:orientation="horizontal"
        android:background="#FFAAAAAA">

        <!-- EditText for typing messages -->
        <EditText
            android:id="@+id/messageEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="@string/text_prompt"/>

        <!-- Send Button -->
        <Button
            android:id="@+id/sendButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send"/>
    </LinearLayout>

</LinearLayout>
