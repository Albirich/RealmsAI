<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <!-- chat_list_activity.xml -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chatListRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/bottomNavBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#00000000"
        android:weightSum="5"
        app:layout_constraintBaseline_toBottomOf="parent">

        <ImageButton
            android:id="@+id/navChats"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_chats"
            android:contentDescription="Chats"
            android:background="@null"
            android:scaleType="fitEnd"
            android:paddingBottom="10dp"/>

        <ImageButton
            android:id="@+id/navCharacters"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_characters"
            android:contentDescription="Characters"
            android:background="@null"
            android:scaleType="fitEnd" />

        <ImageButton
            android:id="@+id/navCreate"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_create"
            android:contentDescription="Create"
            android:background="@null"
            android:layout_gravity="bottom"
            android:adjustViewBounds="true"
            android:scaleX="1.2"
            android:scaleY="1.2"
            android:scaleType="fitEnd"
            android:paddingBottom="10dp"
            />

        <ImageButton
            android:id="@+id/navHistory"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_history"
            android:contentDescription="History"
            android:background="@null"
            android:scaleType="fitEnd" />

        <ImageButton
            android:id="@+id/navProfile"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_profile"
            android:contentDescription="Profile"
            android:background="@null"
            android:scaleType="fitEnd" />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
