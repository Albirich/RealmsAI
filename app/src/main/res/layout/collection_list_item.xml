<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="4dp"
    android:gravity="center">

    <TextView
        android:id="@+id/character_slot_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Character:"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/character_image"
        android:maxLines="1"
        android:ellipsize="end"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/character_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:scaleType="fitXY"
        app:layout_constraintTop_toBottomOf="@id/character_slot_number"
        app:layout_constraintBottom_toTopOf="@id/character_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/rounded_square"
        android:layout_marginBottom="4dp"/>

    <!-- Halo overlay -->
    <ImageView
        android:id="@+id/update_halo"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:layout_constraintTop_toTopOf="@id/character_image"
        app:layout_constraintBottom_toBottomOf="@id/character_image"
        app:layout_constraintStart_toStartOf="@id/character_image"
        app:layout_constraintEnd_toEndOf="@id/character_image"
        android:src="@drawable/ic_update_halo"
        android:scaleType="fitXY"
        android:visibility="gone" />

    <TextView
        android:id="@+id/character_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/character_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:maxLines="1"
        android:ellipsize="end"
        android:gravity="center"/>
</androidx.constraintlayout.widget.ConstraintLayout>
