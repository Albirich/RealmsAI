<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/chatRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/deep_space_black"> <com.example.RealmsAI.StarfieldView
        android:id="@+id/starfieldBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/backgroundImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:alpha="1.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/relationshipEditorTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Character Relationships"
        android:textColor="@color/white"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:layout_marginBottom="8dp"/>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/infoButtonCharRelationshipsPage"
        app:layout_constraintBottom_toBottomOf="@id/infoButtonCharRelationshipsPage"
        app:layout_constraintStart_toStartOf="@id/infoButtonCharRelationshipsPage"
        app:layout_constraintEnd_toEndOf="@id/infoButtonCharRelationshipsPage"
        android:src="@drawable/outline"
        android:scaleType="fitXY"/>
    <include
        android:id="@+id/infoButtonCharRelationshipsPage"
        layout="@layout/info_button"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/relationshipEditorTitle"
        app:layout_constraintBottom_toBottomOf="@id/relationshipEditorTitle"
        app:layout_constraintStart_toEndOf="@id/relationshipEditorTitle"
        android:layout_gravity="center_vertical" />
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/relationshipRecycler"
        app:layout_constraintBottom_toBottomOf="@id/relationshipRecycler"
        app:layout_constraintStart_toStartOf="@id/relationshipRecycler"
        app:layout_constraintEnd_toEndOf="@id/relationshipRecycler"
        android:src="@drawable/outline"
        android:scaleType="fitXY"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/relationshipRecycler"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/relationshipEditorTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnAddCharRelationship"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="8dp"
        android:paddingBottom="8dp" />

    <Button
        android:id="@+id/btnAddCharRelationship"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Relationship"
        app:layout_constraintTop_toBottomOf="@id/relationshipRecycler"
        app:layout_constraintBottom_toTopOf="@id/btnDone"
        android:drawableLeft="@android:drawable/ic_input_add"
        android:layout_marginBottom="8dp"
        />

    <Button
        android:id="@+id/btnDone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Done"
        android:background="?attr/colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/btnAddCharRelationship"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@android:color/white"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
