<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <!-- (a) Card background, same as chat -->
    <ImageView
        android:id="@+id/charCardBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/chat_card" />

    <!-- (b) One‐slot avatar container with weighted spacers -->
    <LinearLayout
        android:id="@+id/CharAvatarContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignTop="@id/charCardBackground"
        android:layout_marginHorizontal="2dp"
        android:paddingTop="3dp"
        android:gravity="center_horizontal">


        <!-- left spacer (0.5 of width) -->
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"/>

        <!-- avatar slot (1 of width) -->
        <ImageView
            android:id="@+id/charAvatar1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/icon_01"
            android:contentDescription="@null" />

        <!-- right spacer -->
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />
    </LinearLayout>

    <!-- (c) Name (reusing chatTitle id) -->
    <TextView
        android:id="@+id/charTitle"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_below="@id/CharAvatarContainer"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="4dp"
        android:text="Character Name"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000" />

    <!-- (d) Summary (reusing chatPreview id) -->
    <TextView
        android:id="@+id/charPreview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/charTitle"
        android:maxHeight="200dp"
        android:layout_marginTop="4dp"
        android:layout_marginHorizontal="4dp"
        android:layout_marginBottom="40dp"
        android:text="Last message preview goes here."
        android:textSize="14sp"
        android:textColor="#666" />
    <!-- 5) Rating -->
    <TextView
        android:id="@+id/chatRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="5dp"
        android:layout_alignBottom="@id/charCardBackground"
        android:text="★ 0.0"
        android:textSize="15sp"
        android:textColor="#FF8800" />

    <TextView
        android:id="@+id/previewTypeBadge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="TYPE"
        android:textSize="13sp"
        android:textStyle="bold"
        android:layout_alignBottom="@id/charCardBackground"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="5dp" />
</RelativeLayout>
