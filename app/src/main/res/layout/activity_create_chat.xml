<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <EditText
            android:id="@+id/titleEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter chat title" />

        <!-- Game Mode Spinner -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Game Mode"
            android:textStyle="bold" />
        <Spinner
            android:id="@+id/modeSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Description -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:counterEnabled="true"
            app:counterMaxLength="4000">
        <EditText
            android:id="@+id/descriptionEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter description"
            android:maxHeight="200dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- First Message -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:counterEnabled="true"
            app:counterMaxLength="500">
        <EditText
            android:id="@+id/firstMessageEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter the opening message"
            android:maxHeight="200dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Background Selector -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Background"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/backgroundButton"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/placeholder_background"
            android:scaleType="fitXY"
            android:contentDescription="Upload background"/>

        <!-- NEW: Preset backgrounds gallery -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/backgroundRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:overScrollMode="never"
            android:scrollbars="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

        <!-- Safe-for-Work Toggle -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SFW Only"
                android:textStyle="bold" />
            <Switch
                android:id="@+id/sfwSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Character Selection Buttons -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Characters"
            android:textStyle="bold" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Repeat up to 6 slots -->
                <ImageButton
                    android:id="@+id/charButton1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/placeholder_avatar"
                    android:contentDescription="Character slot 1"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:scaleType="centerCrop" />

                <ImageButton
                    android:id="@+id/charButton2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/placeholder_avatar"
                    android:contentDescription="Character slot 2"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:scaleType="centerCrop" />
<!--
                <ImageButton
                    android:id="@+id/charButton3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/placeholder_avatar"
                    android:contentDescription="Character slot 3"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:scaleType="centerCrop" />

                <ImageButton
                    android:id="@+id/charButton4"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/placeholder_avatar"
                    android:contentDescription="Character slot 4"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:scaleType="centerCrop" />

                <ImageButton
                    android:id="@+id/charButton5"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/placeholder_avatar"
                    android:contentDescription="Character slot 5"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:scaleType="centerCrop" />

                <ImageButton
                    android:id="@+id/charButton6"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/placeholder_avatar"
                    android:contentDescription="Character slot 6"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:scaleType="centerCrop" />
                    -->
            </LinearLayout>
        </HorizontalScrollView>

        <!-- Tags -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Tags (comma-separated)"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/tagsEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="e.g. fantasy, mystery" />
        <!-- Create Button -->
        <Button
            android:id="@+id/createChatButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Create Chat" />
    </LinearLayout>
</ScrollView>
