<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sessionLandingRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="18dp">

    <!-- 1. Title -->
    <TextView
        android:id="@+id/sessionTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Chat Title"
        android:textStyle="bold"
        android:textSize="32sp"
        android:textColor="#4B85DB"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 2. Characters horizontal scroll -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/characterScroll"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:paddingVertical="6dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/sessionTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 3. Persona Slot -->
    <LinearLayout
        android:id="@+id/personaPickerSlot"
        android:layout_width="120dp"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/characterScroll"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp">
        <ImageView
            android:id="@+id/personaAvatar"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@drawable/icon_01"
            android:contentDescription="Persona"/>
        <TextView
            android:id="@+id/personaName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Persona"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:textSize="16sp"/>
    </LinearLayout>

    <!-- 4. Description / Info Block -->
    <TextView
        android:id="@+id/chatDescriptionHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Chat Info"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="17sp"
        android:paddingTop="14dp"
        app:layout_constraintTop_toBottomOf="@id/personaPickerSlot"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/chatDescription"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="16sp"
        android:background="#EFEFEF"
        android:padding="12dp"
        android:gravity="start|top"
        android:minHeight="96dp"
        android:maxLines="8"
        app:layout_constraintTop_toBottomOf="@id/chatDescriptionHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomRow"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="10dp"/>

    <!-- 5. Bottom row: Relationship, SFW toggle, Start button -->
    <LinearLayout
        android:id="@+id/bottomRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/relationshipBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Relationships"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal">
            <TextView
                android:text="SFW"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333"
                android:layout_marginEnd="5dp"/>
            <Switch
                android:id="@+id/sfwToggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <Button
            android:id="@+id/startSessionBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Start Session"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
