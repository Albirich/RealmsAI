<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/halo_shape"
    android:padding="12dp"
    android:layout_marginBottom="8dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scenario / User Say:"
        android:textColor="#888888"
        android:textSize="12sp"/>

    <EditText
        android:id="@+id/promptInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="e.g. Someone insults you"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:background="@android:color/transparent"
        android:minHeight="48dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#444444"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Character Response:"
        android:textColor="#888888"
        android:textSize="12sp"/>

    <EditText
        android:id="@+id/responseInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Write exactly how they would reply..."
        android:textColor="#AACCFF"
        android:textStyle="italic"
        android:background="@android:color/transparent"
        android:minHeight="48dp"/>

    <Button
        android:id="@+id/removeRowBtn"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Remove"
        android:textColor="#FF5555"
        android:background="@android:color/transparent"
        android:layout_gravity="end"/>

</LinearLayout>