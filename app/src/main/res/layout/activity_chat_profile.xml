<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- Title -->
        <TextView
            android:id="@+id/chatProfileTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Chat Title"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"/>

        <!-- Author -->
        <TextView
            android:id="@+id/chatProfileAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="by @author"
            android:textSize="14sp"
            android:textColor="#3974D3"
            android:textStyle="italic"
            app:layout_constraintTop_toBottomOf="@id/chatProfileTitle"
            app:layout_constraintStart_toStartOf="@id/chatProfileTitle"
            android:layout_marginTop="8dp"/>

        <!-- SFW Badge -->
        <ImageView
            android:id="@+id/chatProfileSfwBadge"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:src="@drawable/sfw_badge"
            app:layout_constraintTop_toTopOf="@id/chatProfileSessionButton"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="24dp"
            android:contentDescription="SFW badge"/>


        <!-- Go to Session Button -->
        <Button
            android:id="@+id/chatProfileSessionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:text="start session"
            android:textSize="10dp"
            android:maxLines="1"
            app:layout_constraintTop_toBottomOf="@id/chatProfileAuthor"
            app:layout_constraintStart_toStartOf="@id/chatProfileAuthor"
            android:layout_marginEnd="24dp"
            android:minWidth="100dp"
            android:backgroundTint="#3974D3"
            android:textColor="#FFF"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/chatProfileDescription"
            app:layout_constraintBottom_toBottomOf="@id/charactersRecyclerView"
            app:layout_constraintStart_toStartOf="@id/chatProfileDescription"
            app:layout_constraintEnd_toEndOf="@id/chatProfileDescription"
            android:src="@drawable/outline"
            android:scaleType="fitXY"/>
        <!-- Description -->
        <TextView
            android:id="@+id/chatProfileDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Chat description..."
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/chatProfileSessionButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"/>

        <!-- Characters Title -->
        <TextView
            android:id="@+id/charactersTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Characters"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/chatProfileDescription"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginTop="20dp"/>

        <!-- Characters RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/charactersRecyclerView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/charactersTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:clipToPadding="false"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
